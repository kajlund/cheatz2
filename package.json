{
  "name": "cheatz20",
  "version": "1.0.0",
  "description": "Sencond life of cheatz geocaching app",
  "main": "main.js",
  "scripts": {
    "dev": "cross-env NODE_ENV=development nodemon src/main.js",
    "start": "cross-env NODE_ENV=production node src/main.js",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@prisma/client": "^4.8.0",
    "bcrypt": "^5.1.0",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-validator": "^6.14.2",
    "http-status-codes": "^2.2.0",
    "jsonwebtoken": "^9.0.0",
    "morgan": "^1.10.0",
    "sqlite3": "^5.1.4",
    "validators": "^0.3.1",
    "winston": "^3.8.2",
    "winston-daily-rotate-file": "^4.7.1"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "eslint": "^8.30.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "nodemon": "^2.0.20",
    "prettify": "^0.1.7"
  },
  "eslintConfig": {
    "parserOptions": {
      "ecmaVersion": 2018
    },
    "extends": [
      "eslint:recommended",
      "plugin:prettier/recommended"
    ],
    "plugins": [
      "prettier"
    ],
    "env": {
      "commonjs": true,
      "es6": true,
      "jest": true,
      "node": true
    },
    "rules": {
      "eqeqeq": "warn",
      "no-console": "warn",
      "no-unused-vars": [
        "error",
        {
          "argsIgnorePattern": "req|res|next|val"
        }
      ],
      "promise/catch-or-return": "off",
      "prettier/prettier": "warn"
    }
  },
  "prettier": {
    "endOfLine": "lf",
    "printWidth": 120,
    "semi": false,
    "singleQuote": true,
    "tabWidth": 2
  }
}
